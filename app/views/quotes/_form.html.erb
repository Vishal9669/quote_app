<%= form_with(model: quote) do |form| %>
  <% if quote.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
        <% quote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :person_id, "Select Person", style: "display: block" %>
    <%= form.collection_select :person_id, Person.all, :id, :name, prompt: "Select Person" %>
  </div><br>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :person_id, "Select Person Logo" %>
    <% Person.all.each do |person| %>
      <div>
        <%= form.radio_button :logo_path, person.image %>
        <%= form.label person.id do %>
          <%= image_tag person.image, size: '80x80'%>
          <%= person.name %>
        <% end %>
      </div>
    <% end %>
  </div><br>

  <div id="template-selector">
    <%= form.label :template_id, "Select Template" %>
    <% @templates.each do |template| %>
      <div>
        <%= form.radio_button :template_id, template.id %>
        <%= form.label template.id do %>
          <%= image_tag template.picture, size: '80x80'%>
        <% end %>
      </div>
    <% end %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
